# Used on rtools43 and up.
# Remove illegal '-mwindows flag from libs (bug in rtools)
PKG_LIBS = $(subst -mwindows,,$(shell pkg-config --libs libopenmpt))
PKG_CFLAGS = -DLIBOPENMPT_NOT_A_DLL -DR_NO_REMAP -DSTRICT_R_HEADERS

# Fallback for older rtools without libopenmpt
ifeq (,$(PKG_LIBS))
  include Makevars.win
endif