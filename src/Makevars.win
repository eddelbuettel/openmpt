RWINLIB = ../windows/libopenmpt
PKG_CPPFLAGS = -I$(RWINLIB)/include/libopenmpt -DLIBOPENMPT_NOT_A_DLL
PKG_LIBS = -L$(RWINLIB)/lib -lopenmpt -lvorbisfile -lvorbis -logg -lmpg123 -lshlwapi -lsndfile -lz 

all: winlibs

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" "../tools/winlibs.R"

clean:
	rm -f $(SHLIB) $(OBJECTS)

.PHONY: all clean winlibs